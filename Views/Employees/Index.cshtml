
@model List<Employee>
<h1>Accounts</h1>
<a href="/Employees/Create">ADD</a>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>EmpName</td>
            <td>Email</td>
            <td>Pass</td>
            <td>Action</td>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.password</td>
                <td> <a asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id">Delet</a></td>
                <td> <a asp-controller="Employees" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
    </tfoot>
</table>
